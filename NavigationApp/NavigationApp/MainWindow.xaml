<Window x:Class="NavigationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NavigationApp"
        mc:Ignorable="d"
        Title="MainWindow" Loaded="Window_Loaded" Height="450" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="149*"/>
            <ColumnDefinition Width="651*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Background="RoyalBlue" Height="NaN" Width="NaN">
            <Button  x:Name="btnHome" Content="Home" Click="btnHome_Click"/>
            <Button Name="btnSearch"  Content="Search" Click="btnSearch_Click"/>
            <Button Name="btnDisplay" Content="Display" Click="btnDisplay_Click"/>
            <Button Name="btnExit" Content="Exit" Click="btnExit_Click"/>

        </StackPanel>
        <Frame Name="frmContainer" Grid.Column="1" NavigationUIVisibility="Hidden"/>


    </Grid>
</Window>
